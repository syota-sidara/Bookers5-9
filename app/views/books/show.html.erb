<div class='container'>
	<div class='row'>

		<%= render "users/list", book: @book, user: @booker.user %>
		
		<div class="col-xs-9">
			<h2>Book detail</h2>
			<table class="table">
				<tr>
					<td>
						<%= link_to user_path(@booker.user), class: "user_#{@booker.user_id}" do %>
							<%= attachment_image_tag @booker.user, :profile_image,format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
							<%= @booker.user.name %>
						<% end %>
					</td>
					<td><%= @booker.title %></td>
					<td><%= @booker.body %></td>
					<% if @booker.user_id == current_user.id %>
						<td><%= link_to "Edit",edit_book_path(@booker.id), class: "edit_book_#{@booker.id}" %></td>
						<td><%= link_to "Destroy",book_path(@booker.id), method: :delete, data: {confirm: "本当に削除しますか？"}, class: "destroy_book_#{@booker.id}" %></td>
					<% end %>
				</tr>
			</table>

		</div>
	</div>
</div>